{
  "name": "SciHive",
  "version": "1.3.1",
  "description": "Open arXiv PDFs in SciHive and allows to add papers to your SciHive library",
  "manifest_version": 2,
  "author": "SciHive",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon_on_32.png",
    "default_title": "Add the current paper to your SciHive library"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://arxiv.org/*",
    "*://www.arxiv.org/*"
  ],
  "content_scripts": [
    {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["jquery.js", "myscript.js"],
    "css": ["style.css"]
  }],
  "web_accessible_resources": [
    "toolbar.html",
    "style.css"
  ]
}
